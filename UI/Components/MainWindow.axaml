<Window x:Class="Jido.UI.Components.MainWindow" xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sidebar="using:Jido.UI.Components.Common.Sidebar"
        xmlns:vm="using:Jido.UI.Components" Title="Jido" Width="1080" Height="640"
        d:DesignHeight="640" d:DesignWidth="1080" x:DataType="vm:MainWindowViewModel"
        Focusable="True"
        FontFamily="{StaticResource Nunito}"
        Icon="avares://Jido/UI/Assets/Images/avalonia-logo.ico" mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *, Auto">
        <Grid Grid.Row="0" Background="Teal" ColumnDefinitions="Auto, *, Auto">
            <!--  Title bar  -->
        </Grid>

        <Grid Grid.Row="1" Classes="sidebar" ColumnDefinitions="260, *">
            <!--  Side bar  -->
            <sidebar:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />
            <!--  Main content  -->
            <Border Grid.Column="1">
                <ContentControl Content="{Binding Content}" />
            </Border>
        </Grid>
        <!--  Footer  -->
        <Grid Grid.Row="2" Background="{DynamicResource Highlight200}" ColumnDefinitions="Auto, *, Auto">
            <Border Grid.Column="0">
                <Label>Label</Label>
            </Border>
            <Border Grid.Column="2">
                <Label>Buttons</Label>
            </Border>
        </Grid>
    </Grid>
</Window>
